# ============================================
# Configuración de Base de Datos
# ============================================
# Desarrollo Local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nasuti_inmobiliaria
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Producción (Supabase - Connection Pooler Session Mode)
# IMPORTANTE: Usa el Connection Pooler en Session Mode (puerto 5432) para aplicaciones persistentes
# Obtén estos valores en: Supabase Dashboard → Settings → Database → Connection Pooler → Session Mode
# DB_HOST=aws-1-sa-east-1.pooler.supabase.com
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres.vyfntmpzjgrkfylpooei  # Formato: postgres.[PROJECT-ID]
# DB_PASSWORD=tu-password-supabase
# DB_SSL=true

# ============================================
# Configuración del Servidor Backend
# ============================================
PORT=3001
NODE_ENV=development

# URLs permitidas para CORS (separadas por comas)
# Desarrollo
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# Producción (ejemplo)
# FRONTEND_URL=https://tu-dominio.com.ar,https://www.tu-dominio.com.ar

# ============================================
# Configuración del Cliente Frontend
# ============================================
# Desarrollo
VITE_API_URL=http://localhost:3001

# Producción (URL de Railway)
# VITE_API_URL=https://tu-backend.railway.app

# ============================================
# Google Maps API
# ============================================
# Obtén tu API key en: https://console.cloud.google.com/
# APIs necesarias: Maps JavaScript API, Geocoding API, Places API
VITE_GOOGLE_MAPS_API_KEY=TU_API_KEY_AQUI
